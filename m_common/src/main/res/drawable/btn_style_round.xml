<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!--当shape=rectangle的时候使用  圆角-->
            <corners android:radius="50dp" />
            <gradient android:angle="0" android:endColor="#7fbf5f" android:startColor="#2a8c4b" android:type="linear" />

        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <!--当shape=rectangle的时候使用  圆角-->
            <corners android:radius="50dp" />
            <gradient android:angle="0" android:endColor="#9ed882" android:startColor="#43a664" android:type="linear" />

        </shape>

    </item>
</selector>